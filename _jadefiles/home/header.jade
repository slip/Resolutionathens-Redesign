mixin nav-content()
  ul
    li: a(href="#about") Home
    li: a(href="#taylor") Us
    li: a(href="#ian") You
    li: a(href="#jennifer") What we do

.mobile-nav
  +nav-content()

header
  .header-position
    h1.logo Resolution Digital Type and Image
    nav.site-nav
      +nav-content()
    ul.social
      li
        a(href="http://www.facebook.com/resolutionathens")
          img(src="/assets/img/social/facebook.svg", alt="Friend us on Facebook")
      li
        a(href="https://twitter.com/ResolutionATH")
          img(src="/assets/img/social/twitter.svg", alt="Follow us on Twitter")
      li
        a(href="https://github.com/slip/Resolutionathens-Redesign")
          img(src="/assets/img/social/github.svg", alt="Clone us on Github")
      li
        a(href="/contact")
          img(src="/assets/img/social/mail.svg", alt="Contact us here")
